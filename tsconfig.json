{
	"compilerOptions": {
		"types": [
            "jest",
            "node",
			"@types/jest",
			"ts-jest"
        ],
		"target": "es2018",
		"lib": ["es5", "es6", "ES2018"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true,
		"typeRoots": ["./src/@types"]
	},
	"include": ["src/**/*", "tests/**/*", "**/*.spec.ts", "__tests__/routes/routes.test.ts",],
	"exclude": ["./coverage", "./dist", "__tests__", "jest.config.ts"],
	"ts-node": {
		"transpileOnly": true,
		"files": true
	}
}